# Environment Configuration Template
# Copy this to .env.development, .env.test, or .env.production and fill in values

# Application Environment
NODE_ENV=development # development | test | production
APP_ENV=development # development | test | production
PORT=3000

# Database
# Use separate databases for each environment:
# - withyou_dev for development
# - withyou_test for testing
# - Production DB URL for production
DATABASE_URL="postgresql://user:password@host:5432/database_name"

# JWT Secret (MUST be strong random string in production)
JWT_SECRET="your-secret-key-here"

# QA Admin Token (for /qa endpoints in dev/test only)
QA_ADMIN_TOKEN="your-qa-admin-token"

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:19006"

# OAuth - Google Sign-In
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# OAuth - Apple Sign-In
APPLE_CLIENT_ID=""
APPLE_TEAM_ID=""
APPLE_KEY_ID=""
APPLE_PRIVATE_KEY=""

# AWS SES - Email Service
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
SES_FROM_EMAIL="noreply@withyou.app"

# AWS S3 - File Storage
S3_BUCKET_NAME=""
CLOUDFRONT_DOMAIN=""

# Deep Linking
APP_DEEP_LINK_DOMAIN="withyou.app"
